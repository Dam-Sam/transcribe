{
  "expo": {
    "name": "Transcribe",
    "slug": "transcribe",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "transcribestt",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.oodatguyoo.transcribe",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "We need microphone access to record voices for transcription.",
        "NSSpeechRecognitionUsageDescription": "We need speech recognition to transcribe your voice.",
        "NSPhotoLibraryUsageDescription": "This app does not use your photo library, but this permission is required by included libraries.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-audio"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "05e34bde-671f-4fb6-99fa-96ac85e27452"
      }
    },
    "owner": "oodatguyoo"
  }
}
